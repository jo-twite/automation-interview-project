{
  "name": "qc-interview-project",
  "description": "QC interview project repository",
  "main": "index.js",
  "private": true,
  "author": "QC",
  "license": "UNLICENSED",
  "repository": {
    "type": "git",
    "url": "https://github.com/QC-Gaming1/automation-interview-project.git"
  },
  "type": "module",
  "scripts": {
    "build": "tsc -b tsconfig.json",
    "build:eslint": "yarn eslint -c ./eslint.config.mjs src && tsc -b tsconfig.json",
    "clean:build": "rimraf -g \"esm\" ./tsconfig.esm.build.tsbuildinfo",
    "ex:all": "vitest typecheck --config vite.config.exercises.ts --run ./exercises/exercise*.ts",
    "ex:eslint": "yarn eslint -c ./eslint.config.mjs ./exercises/*.ts && vitest typecheck --config vite.config.exercises.ts --run ./exercises/exercise*.ts",
    "ex1": "vitest typecheck --config vite.config.exercises.ts --run ./exercises/exercise1.ts",
    "ex2": "vitest typecheck --config vite.config.exercises.ts --run ./exercises/exercise2.ts",
    "ex3": "vitest typecheck --config vite.config.exercises.ts --run ./exercises/exercise3.ts",
    "ex:watch": "vitest typecheck --config vite.config.exercises.ts ./exercises/exercise*.ts",
    "ex4": "cucumber-js src/features/exercise4.feature -c esm/testRunnerController/cucumber.js",
    "test:ex": "vitest typecheck --config vite.config.exercises.ts --run ./exercises/**/*.test.ts",
    "test": "vitest typecheck --config vite.config.ts --run ./src/**/*.test.ts",
    "format": "prettier -c .prettierrc.mjs --cache --write \"./**/*.ts\"  --ignore-path .prettierignore"
  },
  "packageManager": "yarn@4.10.2",
  "devDependencies": {
    "@eslint/compat": "^1.3.2",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.35.0",
    "@types/node": "^24.5.2",
    "@typescript-eslint/eslint-plugin": "8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "eslint": "9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-formatter-compact": "^8.40.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "2.32.0",
    "globals": "^16.4.0",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@cucumber/cucumber": "^9.6.0",
    "@cucumber/cucumber-expressions": "^18.0.1",
    "@cucumber/messages": "^27.2.0",
    "@cucumber/pretty-formatter": "1.0.1",
    "@playwright/test": "^1.55.0",
    "playwright": "^1.55.0"
  }
}
